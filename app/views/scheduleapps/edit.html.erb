<h3>予定の編集</h3>

<%= form_with model: @schedule do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
        </tr>
        <td><%= f.text_field :title %></td>
    </table>
    <% if @schedule.errors.any? %>
        <p><%= @schedule.errors.full_messages_for(:title).first %></p>
    <% end %>

    <table>
        <tr>
            <th><%= f.label :start_date, "開始日" %></th>
            <th><%= f.label :end_date, "終了日" %></th>
        </tr>
        <tr>
            <td><%= f.date_field :start_date %></td>
            <td><%= f.date_field :end_date %></td>
        </tr>
    </table>
    <% if @schedule.errors.any? %>
        <p><%= @schedule.errors.full_messages_for(:start_date).first %></p>
        <p><%= @schedule.errors.full_messages_for(:end_date).first %></p>
    <% end %>

    <table>
        <td><%= f.check_box :one_day, {}, "◯", "" %></td>
        <td>終日の場合はチェックを入れる</td>
    </table>

    <table>
        <tr>
            <th><%= f.label :memo, "スケジュールメモ" %></th>
        </tr>
        <td><%= f.text_area :memo %></td>
    </table>
    <% if @schedule.errors.any? %>
        <%= @schedule.errors.full_messages_for(:memo).first %>
    <% end %>

    <table>
        <th><%= f.submit "保存する" %></th>
        <th><%= link_to "キャンセル", :scheduleapps %></th>
    </table>

<% end %>