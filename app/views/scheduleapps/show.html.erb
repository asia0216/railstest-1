<h3>スケジュール詳細</h3>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @schedule.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @schedule.start_date.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @schedule.end_date.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @schedule.one_day %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @schedule.memo %></td>
    </tr>
</table>

<div><%= link_to "戻る", :scheduleapps %></div>

<div><%= link_to "編集", edit_scheduleapp_path(@schedule.id) %></div>